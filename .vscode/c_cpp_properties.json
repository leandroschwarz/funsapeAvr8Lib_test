{
    "configurations": [
        {
            "name": "AVR",
            "compilerPath": "avr-g++",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "includePath": [
                "/lib/avr/include/**",
                "${workspaceFolder}/**"
            ],
            "compilerArgs": [
                "-g",
                "-Os",
                "-Wall",
                "-Wextra",
                "-fpermissive",
                "-fno-exceptions",
                "-fno-threadsafe-statics",
                "-pipe",
                "-mmcu=atmega328p",
                "-DF_CPU=16000000UL",
                "-Datmega328p"
            ],
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}
